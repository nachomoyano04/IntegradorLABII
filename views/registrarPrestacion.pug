extends inicio.pug
block content
    script(type="module", src="/js/crudPrestaciones.js") 
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    .divRegistrarMedicamentos
        .divRegistroMedicamentos#registroMedicamento 
            h1.h1RegistrarMedicamento RegistrarMedicamentos
            .formularioRegistrarMedicamento
                .labels
                    label Nombre Genérico
                    input.inputFormRegistro(list="nombresGenericos")
                    datalist#nombreGenerico
                    -if(nombresGenericos){
                        -for(let ng of nombresGenericos){
                            option(value= ng) 
                        -}
                    -}
                .labels 
                    label Nombre Comercial
                    input.inputFormRegistro(list= "nombresComerciales")
                    datalist#nombresComerciales
                    -if(nombresComerciales){
                        -for(let nc of nombresComerciales){
                            option(value= nc) 
                        -}
                    -}
                .labels 
                    label Concentración
                    input.inputFormRegistro(list= "concentraciones")
                    datalist#concentraciones 
                    -if(concentraciones){
                        -for(let c of concentraciones){
                            option(value= c) 
                        -}
                    -}
                .labels 
                    label Forma Farmacéutica
                    input.inputFormRegistro(list= "formasFarmaceuticas")
                    datalist#formasFarmaceuticas 
                    -if(formasFarmaceuticas){
                        -for(let ff of formasFarmaceuticas){
                            option(value= ff) 
                        -}
                    -}
                .labels 
                    label Presentación
                    input.inputFormRegistro(list= "presentaciones")
                    datalist#presentaciones 
                    -if(presentaciones){
                        -for(let p of presentaciones){
                            option(value= p) 
                        -}
                    -}
                .labels 
                    label Categoría
                    input.inputFormRegistro(list= "categorias")
                    datalist#categorias 
                    -if(categorias){
                        -for(let c of categorias){
                            option(value= c) 
                        -}
                    -}    
                .labels 
                    label Familia
                    input.inputFormRegistro(list= "familias")
                    datalist#familias 
                    -if(familias){
                        -for(let f of familias){
                            option(value= f) 
                        -}
                    -}
                .divBotones
                    input.botones(type="button", value="Registrar", id="botonRegistrarPaciente")
                    input.botones(type="button", value="Cancelar", id="botonCancelarUpdate", style="display: none")
                    input.botones(type="button", value="Guardar Cambios", id="botonGuardarUpdate", style="display: none")
        .divRegistroMedicamentos#busquedaMedicamentos
            h1.h1RegistrarMedicamento Buscar medicamentos
            .formularioBuscarMedicamento
                .divLabelsInputs
                    .labelEinputBuscarPacientes
                        label(for="inputBuscarPacientesByDNI") Ingrese el DNI
                        input(type="number", id="inputBuscarPacientesByDNI")
                .paciente
                    ul.listaPacientes