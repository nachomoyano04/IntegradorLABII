                .labelLado2(style="display:none")
                    label Lado2
                    .divRarPre
                        input.inputFormRegistro(list= "lados2",  placeholder="opcional", id="lado2")
                        datalist#lados2
                            -if(lados){
                                -for(let l of lados){
                                    option(value= l.nombreLado, data-value= l.idLado) 
                                -}
                            -}
                        input(hidden, id="inputHiddenLado2")
                .labelLado3(style="display:none") 
                    label Lado3
                    .divRarPre
                        input.inputFormRegistro(list= "lados3", placeholder="opcional", id="lado3")
                        datalist#lados3 
                            -if(lados){
                                -for(let l of lados){
                                    option(value= l.nombreLado, data-value= l.idLado) 
                                -}
                            -}
                        input(hidden, id="inputHiddenLado3")
                .labelIndicacion 
                    label Indicacion
                    textarea(style="resize: none;width: 60%;height: 85px;").inputFormRegistro(id="inputIndicacion")
                .labelJustificacion
                    label Justificaci贸n
                    textarea(style="resize: none;width: 60%;height: 85px;").inputFormRegistro(id="inputJustificacion")
                .divBotones
                    input.botones(type="button", value="Registrar", id="botonRegistrarPrestacion")
                    input.botones(type="button", value="Cancelar", id="botonCancelarUpdate", style="display: none")
                    input.botones(type="button", value="Guardar Cambios", id="botonGuardarUpdate", style="display: none")
