extends inicio.pug
block content
    script(type="module", src="/js/crudPrestaciones.js") 
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    .divRegistrarPrestacion
        .divRegistroMedicamentos#registroMedicamento 
            h1.h1RegistrarMedicamento Registrar prestaci贸n
            .formularioRegistrarMedicamento
                .labelNombrePrestacion
                    label(for="nombrePrestacion") Nombre Prestaci贸n
                    input.inputFormRegistro(id="nombrePrestacion")
                .labels
                    label Lado
                    .divRarPre
                        input.inputFormRegistro(list= "lados1",  placeholder="opcional", id="lado1")
                        datalist#lados1
                            -if(lados){
                                -for(let l of lados){
                                    option(value= l.nombreLado, data-value= l.idLado) 
                                -}
                            -}
                        input(hidden, id="inputHiddenLado1")
                        button.tooltip#botonAgregarLado(type="button")
